        "edw_source": { "tables": ["PARTY_RISK_WEIGHT_D"], "field": "INDUSTRY_CD_STRATEGIC" },
        "rule_text": "Y=1；N=0（納入潛力）。",
        "score": { "type": "categorical_map", "mapping": { "Y": 1.0, "N": 0.0 }, "unknown_default": 0.0, "target": "R" }
      },
      {
        "key": "corp_credit_rating",
        "label": "企業授信評等",
        "weight": 0,
        "edw_source": { "tables": ["PARTY_BK_APPL_CORP_CR_RATING"], "field": "SCORE_CD" },
        "rule_text": "1–3級→1；4–6→0.6；7–9→0.2；10–12→0。",
        "score": { "type": "numeric_ranges", "ranges": [[1, 3, 1.0], [4, 6, 0.6], [7, 9, 0.2], [10, 12, 0.0]], "target": "R" }
      },
      {
        "key": "product_diversity_score",
        "label": "往來業務多樣性（大類數）",
        "weight": 0,
        "edw_source": { "tables": ["AML_RISKSCORE_NORMAL"], "field": "SCSB_BUSINESS" },
        "rule_text": "≥5=1；4=0.8；3=0.5；2=0.2；1=0。",
        "score": { "type": "numeric_step_ge", "steps": [[5, 1.0], [4, 0.8], [3, 0.5], [2, 0.2], [1, 0.0]], "target": "R" }
      },
      {
        "key": "avg_balance_6m",
        "label": "近6月平均存款（台幣折算）",
        "weight": 0,
        "edw_source": { "tables": ["AML_RISKSCORE_NORMAL"], "field": "M6AVGBAL" },
        "rule_text": "法人金額尺度較大；此版先保留欄位不加權。",
        "score": null
      },
      {
        "key": "avg_balance_qoq_change",
        "label": "活存餘額季變化（差額）",
        "weight": 0,
        "edw_source": { "tables": ["AML_RISKSCORE_NORMAL"], "field": "M6AVGAMT" },
        "rule_text": "取兩期季末比較（例：114/09/30 vs 114/03/31）。",
        "score": {
          "type": "numeric_bins_amt_diff",
          "up_bins_twd": [[200000000, 1.0], [80000000, 0.8], [30000000, 0.5], [10000000, 0.3], [3000000, 0.2]],
          "down_bins_twd": [[-200000000, 1.0], [-80000000, 0.8], [-30000000, 0.5], [-10000000, 0.3], [-3000000, 0.2]],
          "target_up": "R",
          "target_down": "A",
          "currency": "TWD"
        }
      },
      {
        "key": "fx_turnover_change",
        "label": "外匯實績變化（率）",
        "weight": 0,
        "edw_source": { "tables": ["PMART_AML.AML_PARTY_TXN"], "field": "FX_TURNOVER" },
        "rule_text": "（當期 − 前期）/ 前期；小額前期設地板避免爆衝；上限/下限截斷。",
        "score": {
          "type": "numeric_bins_pct",
          "growth_bins": [[1.0, 1.0], [0.5, 0.6], [0.3, 0.3]],
          "decline_bins": [[-0.6, 1.0], [-0.4, 0.6], [-0.2, 0.3]],
          "floor_prev_amount": { "natural": 100000, "corporate": 1000000 },
          "guards": { "cap_pct": { "up": 3.0, "down": -0.8 }, "min_active_months_each_half": 3 },
          "target_up": "R",
          "target_down": "A"
        }
      },
      {
        "key": "loan_util_change_pp",
        "label": "放款額度動用率變化（pp）",
        "weight": 0,
        "edw_source": { "tables": ["PMART_REGT.KPI_CUST_CORP"], "field": "CF_Loan_Limit_Use_Rate" },
        "rule_text": "（本月 − 上月）百分點；與自然人相同保護條件。",
        "score": {
          "type": "numeric_bins_pp",
          "bins_up": [[40, 1.0], [20, 0.8], [10, 0.5]],
          "bins_down": [[-50, 1.0], [-35, 0.8], [-20, 0.5], [-10, 0.3]],
          "no_score_below_pp": 10,
          "guards": { "skip_if_limit_change_pct_over": 0.1, "winsor_abs_pp": 120 },
          "target_up": "R",
          "target_down": "A"
        }
      },
      {
        "key": "credit_util_change_pp",
        "label": "授信額度動用率變化（pp）",
        "weight": 0,
        "edw_source": { "tables": ["PMART_REGT.KPI_CUST_CORP"], "field": "CF_Credit_Limit_Use_Rate" },
        "rule_text": "（本月 − 上月）百分點；與自然人相同保護條件。",
        "score": {
          "type": "numeric_bins_pp",
          "bins_up": [[40, 1.0], [20, 0.8], [10, 0.5]],
          "bins_down": [[-50, 1.0], [-35, 0.8], [-20, 0.5], [-10, 0.3]],
          "no_score_below_pp": 10,
          "guards": { "skip_if_limit_change_pct_over": 0.1, "winsor_abs_pp": 120 },
          "target_up": "R",
          "target_down": "A"
        }
      },
      {
        "key": "ebank_interactions_3m_yoy",
        "label": "數位互動 YoY（近3月月均）",
        "weight": 0,
        "edw_source": { "tables": ["DM_DIGI_CORP"], "field": "EB_LOGIN_CNT_3M" },
        "rule_text": "計算方式與自然人相同；門檻相同；月均<10 視為 0。",
        "score": {
          "type": "numeric_bins_pct",
          "growth_bins": [[0.3, 1.0], [0.2, 0.7], [0.1, 0.4]],
          "decline_bins": [[-0.3, 1.0], [-0.2, 0.7], [-0.1, 0.4]],
          "target_up": "R",
          "target_down": "A"
        }
      },
      {
        "key": "edd_uncooperative",
        "label": "不配合盡職審查",
        "weight": 0,
        "edw_source": { "tables": ["AML_RISKSCORE_NORMAL"], "field": "UNCOOPERATIVE_FLAG" },
        "rule_text": "Y=1；N=0（關注用；必要時可直接排除）。",
        "score": { "type": "categorical_map", "mapping": { "Y": 1.0, "N": 0.0 }, "unknown_default": 0.0, "target": "A" }
      },
      {
